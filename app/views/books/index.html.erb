<main>
	<h1>Books</h1>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
			<% @books.each do |book| %>
			<tr>
				 <td><%= book.title %></td>
				 <td><%= book.body %></td>
			     <td><%= link_to "Show", book_path(book.id) %></td>
			     <td><%= link_to "Edit", edit_book_path(book.id) %></td>
			     <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete %></td>
			</tr>
			<% end %>
	</table>
	<h1>New book</h1>

	<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error:<%= message %></li>
      <% end %>
    </ul>
  </div>
    <% end %>

	<%= form_for(@book) do |f| %>
	
	    <h4>title</h4>
	    <%= f.text_field :title %>

	    <h4>body</h4>
	    <%= f.text_area :body %>
	    <div class="button"><%= f.submit 'Create Book' %></div>
	<% end %>
</main>